<%= form_for @employee do |f|%>
<div id="form-grid">

  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :job_title %>
  <%= f.text_field :job_title %>

  <%= f.label :salary %>
  <%= f.text_field :salary %>

  <%= f.label :notes%>
  <%= f.text_area :notes %>
  
</div>
  <%= f.submit %>
<% end %>
